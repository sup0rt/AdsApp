<Window x:Class="AdsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdsApp"
        mc:Ignorable="d"
        Title="Объявления"
        Height="650"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Icon="/Photos/Иконка.ico"
        Background="White"
        FontFamily="Tw Cen MT"
        FontSize="14">

    <!-- Глобальные цвета и кисти -->
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryTextBrush"    Color="#37474F"/>
        <!-- RGB(55,71,79) -->
        <SolidColorBrush x:Key="SecondaryTextBrush"  Color="#78909C"/>
        <!-- RGB(120,144,156) -->
        <SolidColorBrush x:Key="AccentBrush"         Color="#FF9E1A"/>
        <!-- RGB(255,156,26) -->
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна с логотипом — строго по гайдлайну -->
        <Border Grid.Row="0" Background="#37474F" Height="60">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="/Photos/Лого.png"
                       Width="140"
                       VerticalAlignment="Center"/>
                <TextBlock Text="Объявления"
                           Foreground="White"
                           FontFamily="Tw Cen MT"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основная рабочая область — белый фон -->
        <Grid Grid.Row="1" Background="White" Margin="16">
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   BorderThickness="0"/>
        </Grid>
    </Grid>
</Window>