<!-- Pages/UserAdsPage.xaml -->
<Page x:Class="AdsApp.Pages.UserAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Мои объявления">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Мои объявления" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Добавить объявление" Margin="20,0" Padding="10,5" Click="AddAd_Click"/>
            <Button Content="Назад" HorizontalAlignment="Right" Padding="10,5" Click="Back_Click"/>
            <Button Content="Выйти" Margin="10,0" Padding="10,5" Click="Logout_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgAds" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" 
                  Margin="10" SelectionMode="Single" MouseDoubleClick="dgAds_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Заголовок" Binding="{Binding ad_title}" Width="*"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding price}" Width="100"/>
                <DataGridTextColumn Header="Город" Binding="{Binding Cities.city_desc}" Width="120"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Categories.category_desc}" Width="150"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Statuses.status_desc}" Width="100"/>
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Tag="{Binding ad_id}" Click="Delete_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" Text="{Binding ElementName=dgAds, Path=Items.Count, StringFormat=Всего объявлений: {0}}" 
                   Margin="10" FontStyle="Italic"/>
    </Grid>
</Page>