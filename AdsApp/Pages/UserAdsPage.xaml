<Page x:Class="AdsApp.Pages.UserAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Мои объявления"
      Background="White" FontFamily="Tw Cen MT" FontSize="14">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Мои объявления" FontSize="24" FontWeight="Bold" Foreground="#37474F" VerticalAlignment="Center"/>
            <Button Content="Добавить объявление" Margin="30,0,0,0" Padding="20,10"
                    Background="#FF9E1A" Foreground="White" FontWeight="Bold" Click="AddAd_Click"/>
            <Button Content="Назад" Margin="16,0" Padding="16,8" Background="#78909C" Foreground="White" Click="Back_Click"/>
            <Button Content="Выйти" Padding="16,8" Background="#c0392b" Foreground="White" Click="Logout_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgAds" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  RowBackground="White" AlternatingRowBackground="#F8F9FA"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  BorderBrush="#E0E0E0" Margin="0,0,0,16"
                  MouseDoubleClick="dgAds_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Заголовок" Binding="{Binding ad_title}" Width="2*"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding price}" Width="*"/>
                <DataGridTextColumn Header="Город" Binding="{Binding Cities.city_desc}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Categories.category_desc}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Statuses.status_desc}" Width="*"/>
                <DataGridTemplateColumn Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Background="#e74c3c" Foreground="White"
                                    Padding="12,6" Tag="{Binding ad_id}" Click="Delete_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" Foreground="#78909C" FontStyle="Italic"
                   Text="{Binding ElementName=dgAds, Path=Items.Count, StringFormat=Всего объявлений: {0}}"/>
    </Grid>
</Page>