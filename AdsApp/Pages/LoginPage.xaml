<!-- Pages/LoginPage.xaml -->
<Page x:Class="AdsApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход в систему">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <StackPanel Grid.Row="1" Margin="0,10">
            <Label Content="Логин:"/>
            <TextBox x:Name="txtLogin" Width="300" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,10">
            <Label Content="Пароль:"/>
            <PasswordBox x:Name="txtPassword" Width="300" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30">
            <Button Content="Войти" Width="120" Height="40" Margin="10" Click="Login_Click"/>
            <Button Content="Выход" Width="120" Height="40" Margin="10" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Page>