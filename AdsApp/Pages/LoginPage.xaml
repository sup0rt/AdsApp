<Page x:Class="AdsApp.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Вход в систему"
      Background="White" FontFamily="Tw Cen MT" FontSize="14">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Вход в систему" FontSize="24" FontWeight="Bold"
                   Foreground="#37474F" HorizontalAlignment="Center" Margin="0,0,0,40"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <Label Content="Логин:" Foreground="#37474F" FontWeight="Bold"/>
            <TextBox x:Name="txtLogin" Height="40" Padding="10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,30">
            <Label Content="Пароль:" Foreground="#37474F" FontWeight="Bold"/>
            <PasswordBox x:Name="txtPassword" Height="40" Padding="10"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Войти" Width="140" Height="38" Margin="0,0,20,0"
                    Background="#FF9E1A" Foreground="White" FontWeight="Bold"
                    Click="Login_Click"/>
            <Button Content="Выход" Width="120" Height="38"
                    Background="#78909C" Foreground="White"
                    Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Page>