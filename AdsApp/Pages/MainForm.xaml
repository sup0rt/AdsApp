<Page x:Class="AdsApp.Pages.MainForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1100"
      Title="Объявления" Background="#f8f9fa">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок + кнопки -->
            <RowDefinition Height="Auto"/>
            <!-- Фильтры -->
            <RowDefinition Height="*"/>
            <!-- Список объявлений -->
        </Grid.RowDefinitions>

        <!-- === ВЕРХНЯЯ ПАНЕЛЬ: Заголовок + Кнопки === -->
        <StackPanel Grid.Row="0" Margin="0,0,0,25">
            <TextBlock Text="Все объявления" 
                       FontSize="28" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#2c3e50"/>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,15,0,0">
                <Button Content="Завершённые объявления →" 
                        x:Name="btnCompleted" 
                        Padding="16,10" Margin="15" 
                        FontSize="14" FontWeight="SemiBold"
                        Background="#e74c3c" Foreground="White"
                        Click="GoToCompletedAds_Click"/>

                <Button Content="Резервное копирование БД" 
                        x:Name="btnBackup" 
                        Padding="16,10" Margin="15" 
                        FontSize="14" FontWeight="SemiBold"
                        Background="#3498db" Foreground="White"
                        Click="BackupDatabase_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- === ФИЛЬТРЫ === -->
        <Border Grid.Row="1" Background="White" 
                CornerRadius="12" Padding="20" 
                BorderBrush="#ddd" BorderThickness="1"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <TextBox x:Name="TBsearch" Width="180" Height="36" 
                         Margin="0,0,15,0" FontSize="14"
                         TextChanged="TBsearch_TextChanged" 
                         ToolTip="Поиск по заголовку и описанию"/>

                <StackPanel Margin="10,0">
                    <Label Content="Категория" Padding="5,0"/>
                    <ComboBox x:Name="cmbCategory" Width="140" Height="32"
                              DisplayMemberPath="category_desc" 
                              SelectionChanged="cmbCategory_SelectionChanged"/>
                </StackPanel>

                <StackPanel Margin="10,0">
                    <Label Content="Тип" Padding="5,0"/>
                    <ComboBox x:Name="cmbType" Width="110" Height="32"
                              DisplayMemberPath="type_desc" 
                              SelectionChanged="cmbType_SelectionChanged"/>
                </StackPanel>

                <StackPanel Margin="10,0">
                    <Label Content="Город" Padding="5,0"/>
                    <ComboBox x:Name="cmbCity" Width="140" Height="32"
                              DisplayMemberPath="city_desc" 
                              SelectionChanged="cmbCity_SelectionChanged"/>
                </StackPanel>

                <StackPanel Margin="10,0">
                    <Label Content="Статус" Padding="5,0"/>
                    <ComboBox x:Name="cmbStatus" Width="120" Height="32"
                              DisplayMemberPath="status_desc" 
                              SelectionChanged="cmbStatus_SelectionChanged"/>
                </StackPanel>

                <Button x:Name="btnClearFilters" Content="Очистить фильтры" 
                        Width="140" Height="36" Margin="20,15,0,0"
                        Background="#95a5a6" Foreground="White"
                        Click="btnClearFilters_Click"/>
            </StackPanel>
        </Border>

        <!-- === СПИСОК ОБЪЯВЛЕНИЙ === -->
        <ListView x:Name="LWads" Grid.Row="2" 
                  Background="Transparent"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" CornerRadius="12" Margin="12" 
                            Padding="15" Width="280" BorderBrush="#e0e0e0" BorderThickness="1">
                        <StackPanel>
                            <Image Source="{Binding photo, TargetNullValue=/Photos/default.jpg}" 
                                   Height="180" Stretch="UniformToFill" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding ad_title}" 
                                       FontWeight="Bold" FontSize="18" TextWrapping="Wrap" 
                                       TextAlignment="Center" Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding Cities.city_desc}" Foreground="#7f8c8d" FontSize="13"/>
                            <TextBlock Text="{Binding Categories.category_desc}" Foreground="#7f8c8d" FontSize="13"/>
                            <TextBlock Text="{Binding Types.type_desc}" Foreground="#7f8c8d" FontSize="13" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding price, StringFormat={}{0} ₽}" 
                                       FontSize="22" FontWeight="Bold" Foreground="#27ae60" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>