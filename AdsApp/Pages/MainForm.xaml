<Page x:Class="AdsApp.Pages.MainForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Объявления" Background="White" FontFamily="Tw Cen MT" FontSize="14">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30" HorizontalAlignment="Center">
            <TextBlock Text="Все объявления" FontSize="28" FontWeight="Bold"
                       Foreground="#37474F" Margin="0,0,0,16"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Завершённые объявления" Margin="0,0,16,0"
                        Padding="20,10" Background="#FF9E1A" Foreground="White" FontWeight="Bold"
                        Click="GoToCompletedAds_Click"/>
                <Button Content="Резервное копирование БД"
                        Padding="20,10" Background="#37474F" Foreground="White"
                        Click="BackupDatabase_Click"/>
                <Button Content="Войти" Margin="16,0" Padding="16,8" Background="#78909C" Foreground="White" Click="Back_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Фильтры -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="20"
                BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,24">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="TBsearch" Width="200" Height="36" Padding="10" Margin="0,0,16,0"
                         ToolTip="Поиск по заголовку и описанию" TextChanged="TBsearch_TextChanged"/>
                <ComboBox x:Name="cmbCategory" Width="160" Height="36" Margin="0,0,16,0" DisplayMemberPath="category_desc" SelectionChanged="cmbCategory_SelectionChanged"/>
                <ComboBox x:Name="cmbType" Width="130" Height="36" Margin="0,0,16,0" DisplayMemberPath="type_desc" SelectionChanged="cmbType_SelectionChanged"/>
                <ComboBox x:Name="cmbCity" Width="160" Height="36" Margin="0,0,16,0" DisplayMemberPath="city_desc" SelectionChanged="cmbCity_SelectionChanged"/>
                <ComboBox x:Name="cmbStatus" Width="140" Height="36" Margin="0,0,16,0" DisplayMemberPath="status_desc" SelectionChanged="cmbStatus_SelectionChanged"/>
                <Button Content="Очистить" Width="120" Height="36" Background="#78909C" Foreground="White"
                        Click="btnClearFilters_Click"/>
            </StackPanel>
        </Border>

        <!-- Список объявлений -->
        <ListView x:Name="LWads" Grid.Row="2" Background="Transparent"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" CornerRadius="8" Width="300" Margin="16"
                            BorderBrush="#E0E0E0" BorderThickness="1" Padding="16">
                        <StackPanel>
                            <Image Source="{Binding photo, TargetNullValue=/Photos/default.jpg}"
                                   Height="180" Stretch="UniformToFill" Margin="0,0,0,16"/>
                            <TextBlock Text="{Binding ad_title}" FontWeight="Bold" FontSize="18"
                                       Foreground="#37474F" TextWrapping="Wrap" TextAlignment="Center"/>
                            <TextBlock Text="{Binding Cities.city_desc}" Foreground="#78909C" FontSize="12" Margin="0,4"/>
                            <TextBlock Text="{Binding Categories.category_desc}" Foreground="#78909C" FontSize="12" Margin="0,4"/>
                            <TextBlock Text="{Binding Types.type_desc}" Foreground="#78909C" FontSize="12" Margin="0,8"/>
                            <TextBlock Text="{Binding price, StringFormat={}{0} ₽}"
                                       FontSize="24" FontWeight="Bold" Foreground="#27ae60"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>