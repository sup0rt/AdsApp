<Page x:Class="AdsApp.Pages.AdEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование объявления"
      Background="White" FontFamily="Tw Cen MT" FontSize="14">
    <Page.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#37474F"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Padding="30">
        <StackPanel>
            <TextBlock Text="Добавление / Редактирование объявления"
                       FontSize="24" FontWeight="Bold"
                       Foreground="#37474F" Margin="0,0,0,30" HorizontalAlignment="Center"/>

            <Label Content="Заголовок:"/>
            <TextBox x:Name="txtTitle" Height="35"/>

            <Label Content="Описание:"/>
            <TextBox x:Name="txtDescription" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Label Content="Цена:"/>
            <TextBox x:Name="txtPrice" Height="35" PreviewTextInput="Number_PreviewTextInput"/>

            <Label Content="Город:"/>
            <ComboBox x:Name="cmbCity" DisplayMemberPath="city_desc" SelectedValuePath="city_id"/>

            <Label Content="Категория:"/>
            <ComboBox x:Name="cmbCategory" DisplayMemberPath="category_desc" SelectedValuePath="category_id"/>

            <Label Content="Тип:"/>
            <ComboBox x:Name="cmbType" DisplayMemberPath="type_desc" SelectedValuePath="type_id"/>

            <Label Content="Статус:"/>
            <ComboBox x:Name="cmbStatus" DisplayMemberPath="status_desc" SelectedValuePath="status_id"
                      SelectionChanged="cmbStatus_SelectionChanged"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,20">
                <Button Content="Сохранить" Width="140" Height="38" Margin="0,0,20,0"
                        Background="#FF9E1A" Foreground="White" FontWeight="Bold"
                        Click="Save_Click"/>
                <Button Content="Назад" Width="120" Height="38"
                        Background="#78909C" Foreground="White"
                        Click="Back_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>