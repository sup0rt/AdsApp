<!-- Pages/AdEditPage.xaml -->
<Page x:Class="AdsApp.Pages.AdEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование объявления">
    <ScrollViewer>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Добавление / Редактирование объявления" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <!-- Поля формы -->
                <Label Content="Заголовок:"/>
                <TextBox x:Name="txtTitle" Height="30" Margin="0,0,0,10"/>

                <Label Content="Описание:"/>
                <TextBox x:Name="txtDescription" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

                <Label Content="Цена:"/>
                <TextBox x:Name="txtPrice" Height="30" Margin="0,0,0,10" PreviewTextInput="Number_PreviewTextInput"/>

                <Label Content="Город:"/>
                <ComboBox x:Name="cmbCity" DisplayMemberPath="city_desc" SelectedValuePath="city_id" Margin="0,0,0,10"/>

                <Label Content="Категория:"/>
                <ComboBox x:Name="cmbCategory" DisplayMemberPath="category_desc" SelectedValuePath="category_id" Margin="0,0,0,10"/>

                <Label Content="Тип:"/>
                <ComboBox x:Name="cmbType" DisplayMemberPath="type_desc" SelectedValuePath="type_id" Margin="0,0,0,10"/>

                <Label Content="Статус:"/>
                <ComboBox x:Name="cmbStatus" DisplayMemberPath="status_desc" SelectedValuePath="status_id" SelectionChanged="cmbStatus_SelectionChanged"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30">
                <Button Content="Сохранить" Width="120" Height="40" Margin="10" Click="Save_Click"/>
                <Button Content="Назад" Width="120" Height="40" Margin="10" Click="Back_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>