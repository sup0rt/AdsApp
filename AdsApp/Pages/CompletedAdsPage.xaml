<Page x:Class="AdsApp.Pages.CompletedAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Завершённые объявления"
      Background="White" FontFamily="Tw Cen MT" FontSize="14">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Завершённые объявления" FontSize="24" FontWeight="Bold"
                       Foreground="#37474F" HorizontalAlignment="Center"/>
            <TextBlock Text="Здесь отображаются все проданные товары с полученной суммой"
                       Foreground="#78909C" FontSize="12" HorizontalAlignment="Center" Margin="0,8,0,20"/>
            <Button Content="← Назад к объявлениям" HorizontalAlignment="Left"
                    Padding="16,8" Background="#78909C" Foreground="White"
                    Click="Back_Click"/>
        </StackPanel>

        <ListView x:Name="LWcompleted" Grid.Row="1" Background="Transparent"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" CornerRadius="8" Width="280" Margin="12"
                            BorderBrush="#E0E0E0" BorderThickness="1" Padding="16">
                        <StackPanel>
                            <Image Source="{Binding photo, TargetNullValue=/Photos/default.jpg}"
                                   Height="160" Stretch="UniformToFill" Margin="0,0,0,16"/>
                            <TextBlock Text="{Binding ad_title}" FontWeight="Bold" FontSize="16"
                                       TextWrapping="Wrap" TextAlignment="Center" Foreground="#37474F"/>
                            <TextBlock Text="{Binding Cities.city_desc}" Foreground="#78909C" FontSize="12" Margin="0,4"/>
                            <TextBlock Text="{Binding Categories.category_desc}" Foreground="#78909C" FontSize="12" Margin="0,4"/>
                            <Separator Margin="0,12"/>
                            <TextBlock Text="Получено:" FontWeight="Bold" FontSize="14" Foreground="#37474F"/>
                            <TextBlock Text="{Binding price, StringFormat={}{0} ₽}"
                                       FontSize="22" FontWeight="Bold" Foreground="#27ae60"
                                       HorizontalAlignment="Center" Margin="0,8"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>