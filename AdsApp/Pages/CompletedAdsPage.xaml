<!-- Pages/CompletedAdsPage.xaml -->
<Page x:Class="AdsApp.Pages.CompletedAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Завершённые объявления">
    <Grid Background="#f9f9f9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20" HorizontalAlignment="Center">
            <TextBlock Text="Завершённые объявления" FontSize="24" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="Здесь отображаются все проданные товары с полученной суммой" 
                       FontSize="14" Foreground="Gray" Margin="0,5"/>
            <Button Content="← Назад к объявлениям" 
                    HorizontalAlignment="Left" Margin="0,15,0,0" 
                    Padding="15,8" Click="Back_Click"/>
        </StackPanel>

        <ListView x:Name="LWcompleted" Grid.Row="1" Margin="20" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" CornerRadius="10" Padding="15" Margin="10" 
                            BorderBrush="#ddd" BorderThickness="1" Width="250">
                        <StackPanel>
                            <Image Source="{Binding photo, TargetNullValue=/Photos/default.jpg}" 
                                   Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding ad_title}" FontWeight="Bold" FontSize="16" TextWrapping="Wrap" TextAlignment="Center"/>
                            <TextBlock Text="{Binding Cities.city_desc}" Foreground="Gray" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Categories.category_desc}" Foreground="Gray" FontSize="12" HorizontalAlignment="Center"/>
                            <Separator Margin="0,10"/>
                            <TextBlock Text="Получено:" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="{Binding price, StringFormat={}{0} ₽}" 
                                       FontSize="20" FontWeight="Bold" Foreground="#228B22" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>